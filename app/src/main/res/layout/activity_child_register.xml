<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center">

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="자녀 등록"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:textSize="24sp"-->
<!--        android:textColor="@android:color/black"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_marginBottom="16dp" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/boyImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boy_image"
            android:clipToOutline="true" />

        <ImageView
            android:id="@+id/girlImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/girl_image"
            android:clipToOutline="true" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/childNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/radius_short_button"
            android:text="이름"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/childNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="text"
            android:hint="자녀의 이름을 입력하세요."/>
    </LinearLayout>


    <!-- 생일 입력 -->
    <LinearLayout
        android:id="@+id/birthdateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/radius_short_button"
            android:text="생일"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/birthdateEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="text"
            android:hint="자녀의 생일을 선택하세요."/>
    </LinearLayout>

    <!-- 성별 선택 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="false"
            android:background="@drawable/radius_short_button"
            android:text="성별"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="남자 아이" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="여자 아이" />
        </RadioGroup>

    </LinearLayout>

    <!-- 등록 버튼 -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_long_button"
        android:text="자녀 등록"
        android:layout_margin="10dp"
        android:gravity="center"/>

    <Button
    android:id="@+id/tempButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="곽희준 한예준은 이걸 눌러서 넘어간다"/>

</LinearLayout>