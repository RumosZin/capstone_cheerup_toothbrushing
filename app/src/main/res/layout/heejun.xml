<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entity.HeeJunActivity">

    <FrameLayout
        android:id="@+id/preview_display_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/no_camera_access_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="no_camera_access" />


    </FrameLayout>

    <ImageView
        android:id="@+id/toothImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/left_circular_image"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:id="@+id/ballImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/toothImage"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/ball_image" />

</RelativeLayout>
