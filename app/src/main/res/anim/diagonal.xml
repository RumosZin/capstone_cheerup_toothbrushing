<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 대각선으로 이동 -->
    <objectAnimator
        android:propertyName="translationX"
        android:valueFrom="0"
        android:valueTo="200"
        android:duration="1000" />
    <objectAnimator
        android:propertyName="translationY"
        android:valueFrom="0"
        android:valueTo="200"
        android:duration="1000" />

    <!-- 원위치로 이동 -->
    <objectAnimator
        android:propertyName="translationX"
        android:valueFrom="200"
        android:valueTo="0"
        android:duration="1000" />
    <objectAnimator
        android:propertyName="translationY"
        android:valueFrom="200"
        android:valueTo="0"
        android:duration="1000" />
</set>